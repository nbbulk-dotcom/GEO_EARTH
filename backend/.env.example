# BRETT Earthquake System v4.0 Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./brett_earthquake.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# External Data Sources
USGS_API_KEY=your_usgs_api_key_here
EMSC_API_KEY=your_emsc_api_key_here
NASA_API_KEY=your_nasa_api_key_here
NOAA_API_KEY=your_noaa_api_key_here
GFZ_API_KEY=your_gfz_api_key_here

# BRETT Engine Configuration
BRETT_ENGINE_VERSION=4.0
GAL_CRM_DIMENSIONS=12
PREDICTION_HORIZON_DAYS=21

# Security
