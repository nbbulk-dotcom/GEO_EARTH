# Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/volcanic_historical
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=volcanic_historical
POSTGRES_USER=postgres

# Redis
REDIS_URL=redis://localhost:6379

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=["http://localhost:3000"]

# External APIs
USGS_API_KEY=your_usgs_api_key_here
NOAA_API_KEY=your_noaa_api_key_here
GVP_API_KEY=your_gvp_api_key_here

# ML Configuration
ML_MODEL_PATH=./models/
TRAINING_BATCH_SIZE=32
LEARNING_RATE=0.001

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
